<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">

    <RelativeLayout
        android:id="@+id/bannerContinent"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/bannercontinent">

            <TextView
                android:id="@+id/datContinent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppinssemibold"
                android:text="Continental"
                android:textColor="@color/white"
                android:textSize="28sp" />

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/tableData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_below="@id/bannerContinent">

                <TextView
                    android:id="@+id/texCases"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@color/warning"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Cases"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:background="@color/alert"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/texDeath"
                    android:text="Death"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:background="@color/success"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/texRecovered"
                    android:text="Recovered"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:id="@+id/valueTable"
            android:layout_below="@id/tableData">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/datCases"
                    android:text="Jml Cases"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/datDeath"
                    android:text="Jml Death"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/datRecovered"
                    android:text="Jml Recovered"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"/>

        </LinearLayout>


</RelativeLayout>
