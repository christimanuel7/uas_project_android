<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp">

    <ImageView
        android:id="@+id/flagCountries"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/soviet"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flagCountries"
        android:id="@+id/datCountries"
        android:text="asdadsadsad"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/tableData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_below="@id/datCountries">

        <TextView
            android:id="@+id/texCases"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@color/warning"
            android:fontFamily="@font/poppinsmedium"
            android:text="Cases"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:background="@color/alert"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/texDeath"
            android:text="Death"
            android:fontFamily="@font/poppinsmedium"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:background="@color/success"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/texRecovered"
            android:text="Recovered"
            android:fontFamily="@font/poppinsmedium"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal"
        android:id="@+id/valueTable"
        android:layout_below="@id/tableData">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/datCases"
            android:text="Jml Cases"
            android:layout_weight="2"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/datDeath"
            android:text="Jml Death"
            android:layout_weight="2"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/datRecovered"
            android:text="Jml Recovered"
            android:layout_weight="2"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>


</RelativeLayout>


